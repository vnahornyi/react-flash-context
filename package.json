{
  "name": "react-flash-context",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "license": "ISC",
  "author": "Vladyslav Nahornyi",
  "repository": {
    "type": "git",
    "url": "https://github.com/vnahornyi/react-flash-context.git"
  },
  "bugs": {
    "url": "https://github.com/vnahornyi/react-flash-context/issues"
  },
  "homepage": "https://github.com/vnahornyi/react-flash-context",
  "scripts": {
    "dev": "vite",
    "build": "tsc & vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "keywords": [
    "react",
    "context",
    "optimization",
    "performance",
    "hook",
    "selector",
    "rerender",
    "react-context",
    "react-hook",
    "react-optimization"
  ],
  "dependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.1.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-test-renderer": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.8.0",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.9.0",
    "jsdom": "^24.1.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^4.0.0-beta.2",
    "vitest": "^2.0.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
